<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mas.gui.controllers.StartController">
   <top>
      <Label styleClass="title" stylesheets="@style.css" text="Use Case Manager" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="seedDBButton" mnemonicParsing="false" onAction="#seedDbClick" prefHeight="50.0" prefWidth="150.0" text="SEED DB" />
            <TilePane alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" orientation="VERTICAL" prefColumns="1" prefRows="2">
               <children>
                  <Button fx:id="runUseCaseButton" mnemonicParsing="false" onAction="#runUseCase" prefHeight="50.0" prefWidth="150.0" text="RUN USE CASE" />
                  <ChoiceBox fx:id="clientChoiceBox" prefWidth="150.0" />
               </children>
            </TilePane>
         </children>
      </HBox>
   </center>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <bottom>
      <Label fx:id="messageLabel" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
